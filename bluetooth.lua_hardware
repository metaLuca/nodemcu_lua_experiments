function onReceive(data)
  local txt = string.gsub(data, "[\r\n]", "")
  if(txt == "1") then
    uart.write(0, "1 on\n")
  elseif(txt == "2") then
    uart.write(0, "2 off\n")
  else
    uart.write(0, "--> " .. txt .. "\n")
  end
end

function startBLE()
  uart.alt(1)
  uart.setup(0, 9600, 8, uart.PARITY_NONE, uart.STOPBITS_1, 0)
  uart.on("data", "\n", onReceive, 0)

  uart.write(0, "-- bluetooth START --\n")
end
